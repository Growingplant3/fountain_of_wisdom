<h1><%= t("activerecord.title.admin.index") %></h1>
<hr>

<%= link_to t("helpers.submit.admin_user_new"), new_admin_user_path %>
<br>
<br>

<table border="2">
  <thead>
    <tr>
      <th><%= t("activerecord.attributes.user.name") %></th>
      <th><%= t("activerecord.attributes.user.email") %></th>
      <th><%= t("activerecord.attributes.task.count") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.tasks.count %></td>
        <td><%= link_to '詳細', "#" %></td>
        <td><%= link_to '編集', "#" %></td>
        <td><%= link_to '削除', "#" %></td>
      </tr>
    <% end %>
  </tbody>
</table>