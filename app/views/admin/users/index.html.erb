<h1>管理者画面：ユーザー一覧</h1>
<hr>

<%= link_to "ユーザー新規登録", new_admin_user_path %>
<br>
<br>

<table border="2">
  <thead>
    <tr>
      <th>名前</th>
      <th>メールアドレス</th>
      <th>タスク数</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.tasks.count %></td>
        <td><%= link_to '詳細', "#" %></td>
        <td><%= link_to '編集', "#" %></td>
        <td><%= link_to '削除', "#" %></td>
      </tr>
    <% end %>
  </tbody>
</table>