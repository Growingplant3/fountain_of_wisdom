<h1><%= t("activerecord.title.admin.index") %></h1>
<hr>

<%= link_to t("helpers.submit.admin_user_new"), new_admin_user_path %>
<br>
<br>

<table border="2">
  <thead>
    <tr>
      <th><%= t("activerecord.attributes.user.name") %></th>
      <th><%= t("activerecord.attributes.user.email") %></th>
      <th><%= t("activerecord.attributes.user.admin") %></th>
      <th><%= t("activerecord.attributes.task.count") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.admin_i18n %></td>
        <td><%= user.tasks.count %></td>
        <td><%= link_to t("helpers.submit.show"), admin_user_path(user) %></td>
        <td><%= link_to t("helpers.submit.edit"), edit_admin_user_path(user) %></td>
        <td><%= link_to t("helpers.submit.destroy"), admin_user_path(user), method: :delete, data: { confirm: t("helpers.submit.really?")} %></td>
      </tr>
    <% end %>
  </tbody>
</table>