<h1><%= t('activerecord.title.task.show') %></h1>
<hr>

<h4><%= t('activerecord.attributes.task.name') %>：<%= @task.name %></h4>
<h4><%= t('activerecord.attributes.task.detail') %>：<%= @task.detail %></h4>
<h4><%= t('activerecord.attributes.task.priority') %>：<%= @task.priority_i18n %></h4>
<h4><%= t('activerecord.attributes.task.situation') %>：<%= @task.situation_i18n %></h4>
<h4><%= t('activerecord.attributes.task.deadline') %>：<%= @task.deadline.strftime("%Y年%m月%d日 %H時%M分") %></h4>

<%= link_to t('helpers.submit.task_edit'), edit_task_path(@task) %>
<br>
<%= link_to t('helpers.submit.task_destroy'), task_path(@task), method: :delete, data: { confirm: t('helpers.submit.really?') } %>
<br>
<%= link_to t('helpers.submit.task_index'), tasks_path %>