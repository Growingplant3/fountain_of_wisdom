<!DOCTYPE html>
<html>
  <head>
    <title>FountainOfWisdom</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <% flash.each do |key, value| %>
        <div class="alert alert-warning alert-dismissible fade in" role="alert">
          <p>
            <a data-dismiss="alert"><%= value %></a>
          </p>
        </div>
      <% end %>
      <div class="container">
        <ul class="nav nav-tabs">
          <% if logged_in? %>
            <li><%= link_to t("activerecord.title.user.show"), user_path(current_user) %></li>
            <li><%= link_to t("activerecord.title.session.destroy"), session_path(current_user), method: :delete %></li>
          <% else %>
            <li><%= link_to t("activerecord.title.user.create"), new_user_path %></li>
            <li><%= link_to t("activerecord.title.session.new"), new_session_path %></li>
          <% end %>
        </ul>
      </div>
      <%= yield %>
    </div>
  </body>
</html>
